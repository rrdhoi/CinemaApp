<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rrdhoi.projectone">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission-sdk-23 android:name="android.permission.INTERNET"/>
    <uses-permission-sdk-23 android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjectOne">
        <activity android:name=".CheckoutActivity"/>
        <activity android:name=".DetailActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".onboarding.OnBoardingOneActivity" />
        <activity android:name=".onboarding.OnBoardingTwoActivity" />
        <activity android:name=".onboarding.OnBoardingTreeActivity" />
        <activity android:name=".sign.signin.SignInActivity" />
        <activity android:name=".sign.SignUpActivity" />
        <activity android:name=".sign.SignUpPhotoScreenActivity" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>